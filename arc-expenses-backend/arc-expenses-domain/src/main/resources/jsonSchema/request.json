      "type": "string",
      "enum": [
        "RESEARCHER",
        "COLLABORATIVE_RESEARCHER",
        "ADMINISTRATIVE"
      ]
    },
    "requestStatus": {
        "type": "string",
        "enum" : [
          "CANCELLED",
          "PENDING",
          "ALL",
          "ACCEPTED",
          "UNDER_REVIEW",
