{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "definitions": {
    "delegate": {
      "type": "object",
      "description": "",
      "properties": {
        "email": { "type": "string" },
        "firstname": { "type": "string" },
        "lastname": { "type": "string" },
        "hidden": { "type": "boolean" }
      },
      "required": [
        "email",
        "firstname",
        "lastname"
      ]
    },
    "personOfInterest": {
      "type": "object",
      "title": "PersonOfInterest",
      "properties": {
        "email": { "type": "string" },
        "firstname": { "type": "string" },
        "lastname": { "type": "string" },
        "delegates": {
          "type": "array",
          "items": { "$ref": "#/definitions/delegate" }
        }
      },
      "required": [
        "email",
        "firstname",
        "lastname"
      ]
    },
    "organization": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "POI": { "$ref": "#/definitions/personOfInterest" },
        "director": { "$ref": "#/definitions/personOfInterest" },
        "dioikitikoSumvoulio": { "$ref": "#/definitions/personOfInterest" },
        "inspectionTeam": {
          "type": "array",
          "items": { "$ref": "#/definitions/personOfInterest" }
        }
      },
      "required": [
        "id",
        "name",
        "POI",
        "director",
        "dioikitikoSumvoulio",
        "inspectionTeam"
      ]
    },
    "institute": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "organization": { "$ref": "#/definitions/organization" },
        "director": { "$ref": "#/definitions/personOfInterest" },
        "accountingRegistration": { "$ref": "#/definitions/personOfInterest" },
        "accountingPayment": { "$ref": "#/definitions/personOfInterest" },
        "accountingDirector": { "$ref": "#/definitions/personOfInterest" },
        "diaugeia": { "$ref": "#/definitions/personOfInterest" },
        "suppliesOffice": { "$ref": "#/definitions/personOfInterest" }
      },
      "required": [
        "id",
        "name",
        "organization",
        "director",
        "accountingRegistration",
        "accountingPayment",
        "accountingDirector",
        "diaugeia"
      ]
    },
    "project": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "acronym": { "type": "string" },
        "institute": { "$ref": "#/definitions/institute" },
        "parentProject":  { "type": "string" },
        "scientificCoordinator": { "$ref": "#/definitions/personOfInterest" },
        "operator": {
          "type": "array",
          "items": { "$ref": "#/definitions/personOfInterest" }
        },
        "startDate": { "type": "string" },
        "endDate": { "type": "string" }
      },
      "required": [
        "id",
        "name",
        "institute",
        "scientificCoordinator",
        "operator"
      ]
    }
  },

  "title": "Request",
  "type": "object",
  "properties": {
    "stage1": {
      "type": "object",
      "description": "stage: Request Submission",
      "properties": {
        "requestDate": { "type": "string" },
        "subject": { "type": "string" },
        "supplier": { "type": "string" },
        "supplierSelectionMethod": { "type": "string" },
        "amountInEuros": { "type": "number" },
        "attachment": { "$ref": "attachment.json" }
      }
    },
    "id": {
      "description": "The unique identifier of the request.",
      "title": "Request ID",
      "type": "string"
    },
    "type": {
      "description": "The type of the request.",
      "type": "string"
    },
    "archiveId": {
      "description": "The archiveId of the request.",
      "type": "string"
    },
    "project": { "$ref": "#/definitions/project" },
    "user": {
      "type": "object",
      "javaType": "gr.athenarc.domain.User" },
    "requesterPosition": {
      "description": "Position of the requester in the Institute.",
      "title": "Requester Position",
      "type": "string"
    },
    "status": {
      "type": "string"
    }
  }
}