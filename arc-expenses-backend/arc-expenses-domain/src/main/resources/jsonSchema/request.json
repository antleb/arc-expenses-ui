{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "title": "Request",
  "type": "object",
  "properties": {
    "currentStage" : {
      "type" : "string"
    },
    "stage1": {
      "type": "object",
      "javaType": "gr.athenarc.domain.Stage1"
    },
    "id": {
      "description": "The unique identifier of the request.",
      "title": "Request ID",
      "type": "string"
    },
    "type": {
      "description": "The type of the request.",
      "type": "string",
      "enum": [
        "REGULAR",
        "CONTRACT",
        "SERVICES_CONTRACT",
        "TRIP"
      ]
    },
    "archiveId": {
      "description": "The archiveId of the request.",
      "type": "string"
    },
    "project": { "javaType": "gr.athenarc.domain.Project" },
    "user": {
      "javaType": "gr.athenarc.domain.User" },
    "requesterPosition": {
      "description": "Position of the requester in the Institute.",
      "title": "Requester Position",
      "type": "string",
      "enum": [
        "RESEARCHER",
        "COLLABORATIVE_RESEARCHER",
        "ADMINISTRATIVE"
      ]
    },
    "requestStatus": {
        "type": "string",
        "enum" : [
          "CANCELLED",
          "PENDING",
          "ACCEPTED",
          "REJECTED"
        ]
    },
    "scientificCoordinatorAsDiataktis": {
      "type": "boolean"
    },
    "trip": {
      "javaType": "gr.athenarc.domain.Trip" }
  }
}