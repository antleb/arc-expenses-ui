{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "title": "Request",
  "type": "object",
  "properties": {
    "stage1": {
      "type": "object",
      "description": "stage: Request Submission",
      "properties": {
        "requestDate": { "type": "string" },
        "subject": { "type": "string" },
        "supplier": { "type": "string" },
        "supplierSelectionMethod": { "type": "string" },
        "amountInEuros": { "type": "number" },
        "finalAmount": { "type": "number" },
        "attachments" : {
          "type" : "array",
          "items" :{
            "type" : "object",
            "javaType" : "gr.athenarc.domain.Attachment"
          }
        }
      }
    },
    "id": {
      "description": "The unique identifier of the request.",
      "title": "Request ID",
      "type": "string"
    },
    "type": {
      "description": "The type of the request.",
      "type": "string"
    },
    "archiveId": {
      "description": "The archiveId of the request.",
      "type": "string"
    },
    "project": { "javaType": "gr.athenarc.domain.Project" },
    "user": {
      "javaType": "gr.athenarc.domain.User" },
    "requesterPosition": {
      "description": "Position of the requester in the Institute.",
      "title": "Requester Position",
      "type": "string"
    },
    "requestStatus": {
      "type": "string"
    },
    "scientificCoordinatorAsDiataktis": {
      "type": "boolean"
    },
    "trip": {
      "javaType": "gr.athenarc.domain.Trip" }
  }
}