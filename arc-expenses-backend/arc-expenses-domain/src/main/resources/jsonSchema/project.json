{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Project",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "acronym": {
      "type": "string"
    },
    "instituteId": {
      "type": "string"
    },
    "parentProject": {
      "type": "string"
    },
    "scientificCoordinator": {
      "javaType": "gr.athenarc.domain.PersonOfInterest"
    },
    "operator": {
      "type": "array",
      "items": {
        "javaType": "gr.athenarc.domain.PersonOfInterest"
      }
    },
    "startDate": {
      "type": "string"
    },
    "endDate": {
      "type": "string"
    },
    "totalCost": {
      "_comment" : "Replace with NUMBER, default 0",
      "type": "string"
    },
    "scientificCoordinatorAsDiataktis": {
      "type": "boolean"
    }
  },
  "required": [
    "id",
    "name",
    "instituteId",
    "scientificCoordinator",
    "operator"
  ]
}
